<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <WebView
        android:id="@+id/wv_klas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >
    </WebView>

    <LinearLayout
        android:id="@+id/ly_web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:background="#ffffff"
            android:gravity="center"
            android:text="www.sumberbola.com"
            android:textColor="#100f0f"
            android:textSize="16dp"
            android:layout_marginRight="5dp"/>


        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swiperefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rel_sub"></android.support.v4.widget.SwipeRefreshLayout>

        <io.github.yuweiguocn.lib.squareloading.SquareLoading
        android:id="@+id/squareLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8a5270d6"
        android:visibility="visible"
        app:dividerSize="2dp"
        app:squareColor="@android:color/white"
        app:squareCorner="2dp"
        app:squareSize="12dp"
        app:xCount="4"
        app:yCount="3" />

    </LinearLayout>

</RelativeLayout>